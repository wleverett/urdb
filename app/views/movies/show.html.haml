#poster
  %img{src: @movie.poster_url.to_s}

#movie
  #info
    #title
      %h1= @movie.title
    #description
      %p= @movie.description
    #trailer
      %i.icon-youtube-play
      =link_to "Watch the trailer on YouTube", @movie.trailer_url, {target: "blank"}

  #showtimes
    %h2.centered Showtimes

    %table
      %thead
        %th Location
        %th Time
      %tbody
        - @showtimes.each do |showtime|
          %tr
            %td= showtime.location
            %td= showtime.time

    / %form{action: "/movies/#{@movie.id}/showtimes", method: "post"}
    /   .location
    /     %label Location
    /     %input{type: "text"}
      
    /   .time
    /     %label Time
    /     %input{type: "text"}
      
    /   .submit
    /     %input.button{name: "commit", type: "submit", value: "Create Showtime"}
    
    = form_for [@movie, @showtime] do |f|
      .location
        = f.label :location
        = f.text_field :location
      .time
        = f.label :time
        = f.text_field :time
      .submit
        = f.submit 'Create Showtime', :class => 'button'

